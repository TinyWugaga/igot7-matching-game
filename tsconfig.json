{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": "./",
    "paths": {
      "@/api/*": [
        "src/pages/api/*"
      ],
      "@/lib/*": [
        "src/lib/*"
      ],
      "@/components/*": [
        "src/components/*"
      ]
    },
    "types": ["@types/gtag.js"],
    "allowJs": true,
    "allowSyntheticDefaultImports": true, // allow import React from 'react';
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "removeComments": false,
    "isolatedModules": true,
    "jsx": "preserve",
    "sourceMap": true,
    "preserveConstEnums": true,
  },
  "include": [
    "next-env.d.ts",
    "src/lib/useHook/*.d.ts",
    "src/global.d.ts",
    "**/*.ts",
    "**/*.tsx"
, "src/lib/useHook/usePuzzle.ts"  ],
  "exclude": [
    "node_modules"
  ]
}